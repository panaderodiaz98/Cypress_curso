pipeline 
{
    agent any

    tools {nodejs "Node"}

    stages 
    {
        stage('Inicio dependendecias e instalaciones') 
        {
             steps {
                        git branch: 'main',
                        url: 'https://github.com/panaderodiaz98/Cypress_curso.git'
                        bat 'npm install'
                        bat 'npm update'                                         
                    }
        }
        stage('Ejecuto tests') 
        {
             steps {
                        bat 'npx cypress run --record --key 708bb905-e9e2-410c-9cfa-6fbf2e7030e1 --spec "cypress\\e2e\\Curso Cypress\\Asserts" --browser chrome'
                    }
        }   
    }
    post
    {
        always
        {
            mail bcc: '', body: '''Se comunica a los correspondientes emails la ejecucion finalizada de la regresion Cypress via Jenkins con reporte.
            Saludos''', cc: '', from: '', replyTo: '', subject: 'Regresion Jenkins', to: 'panaderodiaz98@gmail.com'
            publishHTML([allowMissing: false, alwaysLinkToLastBuild: false, keepAll: false, reportDir: 'cypress/reports/', reportFiles: 'Ejecucion_jenkins.html', reportName: 'Reporte jenkins', reportTitles: 'Reporte jenkins', useWrapperFileDirectly: true])
        }
    }         
}
       