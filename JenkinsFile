pipeline {
    agent any

    tools {nodejs "node"}

    stages {

        stage('Cypress Parallel Test Suite') {
            parallel {
                stage('VM2_1') {
                    agent {
                        label "VM2_1"
                    }
                    steps {
                        git url: 'https://github.com/panaderodiaz98/Cypress_curso.git'
                        bat 'npm install'
                        bat 'npm update'                       
                        bat 'npx cypress run cypress run --record --key 708bb905-e9e2-410c-9cfa-6fbf2e7030e1  --parallel'
                    
                    }
                }

                stage('VM2_2') {
                    agent {
                        label "VM2_3"
                    }
                    steps {
                        git url: 'https://github.com/panaderodiaz98/Cypress_curso.git'
                        bat 'npm install'
                        bat 'npm update'                       
                        bat 'npx cypress run cypress run --record --key 708bb905-e9e2-410c-9cfa-6fbf2e7030e1  --parallel'
                    
                    }
                }

                stage('VM2_3') {
                    agent {
                        label "VM2_3"
                    }
                    steps {
                        git url: 'https://github.com/panaderodiaz98/Cypress_curso.git'
                        bat 'npm install'
                        bat 'npm update'                       
                        bat 'npx cypress run cypress run --record --key 708bb905-e9e2-410c-9cfa-6fbf2e7030e1  --parallel'
                    
                    }
                }   
            }         
        }
    }          
}