pipeline 
{
    agent any

    tools {nodejs "Node"}

    stages 
    {
        stage('Inicio dependendecias e instalaciones') 
        {
             steps {
                        git branch: 'main',
                        url: 'https://github.com/panaderodiaz98/Cypress_curso.git'
                        bat 'npm install'
                        bat 'npm update'                                         
                    }
        }
        stage('Ejecuto tests') 
        {
             steps {
                        bat 'npx cypress run --record --key 708bb905-e9e2-410c-9cfa-6fbf2e7030e1 --spec "cypress\\e2e\\Curso Cypress\\Asserts" --browser chrome'
                    }
        }   
    }
    post
    {
        always
        {
            mail bcc: '', body: 'Hola que tal como estas', cc: '', from: '', replyTo: '', subject: 'Probando mail', to: 'panaderodiaz98@gmail.com'
        }
    }         
}
       