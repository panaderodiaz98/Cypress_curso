pipeline 
{
    agent any

    tools {nodejs "Node"}

    stages 
    {
         parameters
        {
            string(name:"Spec", defaultValue:"cypress\\e2e\\**\\**", description:"Ingresar spec a ejecutar. Ej: cypress\\e2e\\FSM\\Tests\\Reserva_material_no_seriado.cy.js")
            choice(name:"Browser", choices:['chrome','edge'], description:"Elegir tipo de browser a testear")
        }
        stage('Inicio dependendecias e instalaciones') 
        {
             steps {
                        git branch: 'main',
                        url: 'https://github.com/panaderodiaz98/Cypress_curso.git'
                        bat 'npm install'
                        bat 'npm update'                                         
                    }
        }
        stage('Ejecuto tests') 
        {
             steps {
                        bat 'npx cypress run --record --key 708bb905-e9e2-410c-9cfa-6fbf2e7030e1 --browser ${Browser} --spec ${Spec}'
                    }
        }   
    }
    post
    {
        always
        {
            publishHTML([allowMissing: false, alwaysLinkToLastBuild: false, keepAll: true, reportDir: 'C:\\Cypress\\Cypress_curso\\cypress\\reports\\html', reportFiles: 'Ejecucion_jenkins.html', reportName: 'HTML Report', reportTitles: '', useWrapperFileDirectly: true])
        }
    }         
}
       